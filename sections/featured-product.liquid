                                endif
                              -%}
                            </td>
                            <td class="h6 mty --fw-medium --align-right">
                              {%- liquid
                                if block.settings.column_2_text_5 != blank
                                  echo block.settings.column_2_text_5
                                  else
                                    echo '&nbsp;'
                                endif
                              -%}
                            </td>
                          </tr>
                        {%- endif -%}
                        {%- if block.settings.column_1_text_6 != blank or block.settings.column_2_text_6 != blank -%}
                          <tr>
                            <td class="h6 mty --fw-medium">
                              {%- liquid
                                if block.settings.column_1_text_6 != blank
                                  echo block.settings.column_1_text_6
                                  else
                                    echo '&nbsp;'
                                endif
                              -%}
                            </td>
                            <td class="h6 mty --fw-medium --align-right">
                              {%- liquid
                                if block.settings.column_2_text_6 != blank
                                  echo block.settings.column_2_text_6
                                  else
                                    echo '&nbsp;'
                                endif
                              -%}
                            </td>
                          </tr>
                        {%- endif -%}
                        {%- if block.settings.column_1_text_7 != blank or block.settings.column_2_text_7 != blank -%}
                          <tr>
                            <td class="h6 mty --fw-medium">
                              {%- liquid
                                if block.settings.column_1_text_7 != blank
                                  echo block.settings.column_1_text_7
                                  else
                                    echo '&nbsp;'
                                endif
                              -%}
                            </td>
                            <td class="h6 mty --fw-medium --align-right">
                              {%- liquid
                                if block.settings.column_2_text_7 != blank
                                  echo block.settings.column_2_text_7
                                  else
                                    echo '&nbsp;'
                                endif
                              -%}
                            </td>
                          </tr>
                        {%- endif -%}
                        {%- if block.settings.column_1_text_8 != blank or block.settings.column_2_text_8 != blank -%}
                          <tr>
                            <td class="h6 mty --fw-medium">
                              {%- liquid
                                if block.settings.column_1_text_8 != blank
