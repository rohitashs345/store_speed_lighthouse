{%- liquid
  assign section_prefix_class = 'featured-product'
  assign section_scheme_class = section.settings.section_color_scheme | prepend: 'scheme scheme--'
  assign product = section.settings.featured_product
  assign product_json_id = 'ProductCardJson-' | append: product.id | append: '-' | append: section.id

  capture loading_attr
    if section.index > 1
      echo 'lazy'
      else
        echo 'eager'
    endif
  endcapture

  assign first_3d_model = product.media | where: 'media_type', 'model' | first
  assign parent_selector= 'featured-product-' | append: product.id | append: '-' | append: section.id
  assign form_id= 'featured-product-atc-form' | append: product.id | append: '-' | append: section.id
  assign product_form_installment_id = 'featured-form-installment' | append: product.id | append: '-' | append: section.id
  assign stock_render_attr = 'data-render-featured-stock'
  assign price_render_attr = 'data-render-featured-price'
  assign sku_render_attr = 'data-render-featured-sku'
  assign qty_render_attr = 'data-render-featured-qty'
  assign error_render_attr = 'data-render-featured-error'
  assign pickup_render_attr = 'data-render-featured-pickup'
  assign variant_media_attr = 'data-update-media'
  assign share_render_attr = 'data-render-main-share'

  if product.selected_or_first_available_variant.featured_media
    assign seo_media = product.selected_or_first_available_variant.featured_media
    else
      assign seo_media = product.featured_media
  endif

  capture has_media
    if product.media.size > 0
      echo 'true'
    endif
  endcapture

  capture product_title
    if product.title != blank
      echo product.title
      else
        echo 'product.title' | t
    endif
  endcapture

  capture product_vendor
    if product.vendor != blank
      echo product.vendor
      else
        echo 'product.vendor' | t
    endif
  endcapture

  capture product_clean_url
    if product.url contains '?'
      assign parts = product.url | split: '?'
      echo parts[0]
      else
        echo product.url
    endif
  endcapture
-%}
{%- if first_3d_model -%}
  <link
    id="ModelViewerStyle-{{ section.id }}"
    rel="stylesheet"
    href="https://cdn.shopify.com/shopifycloud/model-viewer-ui/assets/v1.0/model-viewer-ui.css"
    media="print"
    onload="this.media='all'"
  >
{%- endif -%}
{%- style -%}
  .{{ section_prefix_class }}-{{ section.id }}{
    --section-padding-top: {{ section.settings.section_top_padding }}px;
    --section-padding-bottom: {{ section.settings.section_bottom_padding }}px;
  }
{%- endstyle -%}
{{- 'component-variant-options.css' | asset_url | stylesheet_tag -}}
{{- 'components-rating-list.css' | asset_url | stylesheet_tag -}}
{{- 'components-deferred-media.css' | asset_url | stylesheet_tag -}}
{{- 'components-collapsibles-accordion.css' | asset_url | stylesheet_tag -}}
{{- 'product-common.css' | asset_url | stylesheet_tag -}}
{{- 'featured-product.css' | asset_url | stylesheet_tag -}}
{{- 'component-product-pickup.css' | asset_url | stylesheet_tag -}}
<div class="global-block {{ section_prefix_class }} product-common {{ section_prefix_class }}-{{ section.id }} {{ section_scheme_class }}" data-parent="{{- parent_selector -}}">
  <div class="container">
    <div class="{{ section_prefix_class }}_wrapper">
      {%- if product.title != blank -%}
        {%- if product.media.size > 0 -%}
          <div class="{{ section_prefix_class }}_media-area">
            <div class="{{ section_prefix_class }}_sticky-wrap">
              <div class="{{ section_prefix_class }}_media-wrap">
                <splide-slider
                  data-drag='false'
                  data-autoplay='{{- section.settings.auto_play -}}'
                  data-rewind="true"
                  data-gap='0'
                  data-per-move="1"
                  data-arrows='false'
                  {% if product.media.size > 1 %}
                    data-pagination='{{ section.settings.show_pagination }}'
                    {% else %}
                      data-pagination='false'
                  {% endif %}
                  data-per-page='1'
                  data-interval="{{- section.settings.change_slides_every | times: 1000 -}}"
                  data-type="slide"
                >
                  <div class="splide product-common_slider" id="gallery-zoom-in-{{- section.id -}}{{- product.id -}}" {{ variant_media_attr }}>
                    <div class="splide__track">
                      <div class="splide__list">
                        {%- if product.selected_or_first_available_variant.featured_media != null -%}
                          {%- liquid
                            assign featured_media = product.selected_or_first_available_variant.featured_media
    
                            capture gallery_media_ratio
                              if section.settings.product_media_size == 'adapt'
                                echo featured_media.preview_image.aspect_ratio | default: '1'
                                else 
                                  echo '1'
                              endif
                            endcapture
                          -%}
                          <div class="splide__slide" data-media-id="{{ featured_media.id }}">
                            <a
                              href="{{ product_clean_url }}"
                              class="product-common_image --media-size-{{ section.settings.product_media_size }}"
                              style="--media-ratio: {{ gallery_media_ratio }};"
                            >
                              {%- render 'product-featured-image', product: product, loading: loading_attr, size: 'full' -%}
                            </a>
                          </div>
                        {%- endif -%}
                        {%- for media in product.media -%}
                          {%- if media.media_type == 'model' -%}
                            <div class="splide__slide">
                              <div
                                class="product-common_image --media-size-{{ section.settings.product_media_size }}"
                                style="--media-ratio: {{ gallery_media_ratio }};"
                              >
                                <product-model class="deferred-media" data-media-id="{{ media.id }}">
                                  <button data-id="Deferred-Poster-Modal-{{ media.id }}-{{ section.id }}" class="deferred-media__poster" type="button">
                                    {%- render 'product-media-image', product: product, media: media, loading: 'eager' -%}
                                    <span class="deferred-media__poster-icn --v-align-middle --justify-center">
                                      {%- render 'icons-data', width: 20, height: 20, use_icon: true, icon_reference: '3d' -%}
                                    </span>
                                    <span class="visually-hidden">
                                      {{- 'product.model.toggler_label' | t: product: product.title -}}
                                    </span>
                                  </button>
                                  <template>
                                    {{- media | media_tag: image_size: "2048x", toggleable: true -}}
                                  </template>
                                </product-model>
                                <button
                                  class="button button--primary product__xr-button"
                                  type="button"
                                  aria-label="{{- 'product.xr_button_label' | t -}}"
                                  data-shopify-xr
                                  data-shopify-model3d-id="{{- media.id -}}"
                                  data-shopify-title="{{- product.title | escape -}}"
                                  data-shopify-xr-hidden
                                >
                                  {%- liquid
                                    render 'icons-data', width: 16, height: 16, use_icon: true, icon_reference: '3d'
                                    echo 'product.xr_button' | t
                                  -%}
                                </button>
                              </div>
                            </div>
                            {%- elsif media.media_type == 'external_video' or media.media_type == 'video' -%}
                              <div class="splide__slide">
                                <div
                                  class="product-common_image --media-size-{{ section.settings.product_media_size }}"
                                  style="--media-ratio: {{ gallery_media_ratio }};"
                                >
                                  <deferred-media class="deferred-media">
                                    <button data-id="Deferred-Poster-Modal-{{ media.id }}-{{ section.id }}" class="deferred-media__poster" type="button">
                                      {%- render 'product-media-image', product: product, media: media, loading: 'eager' -%}
                                      <span class="deferred-media__poster-icn --v-align-middle --justify-center">
                                        {%- render 'icons-data', width: 24, height: 24, use_icon: true, icon_reference: 'play' -%}
                                      </span>
                                      <span class="visually-hidden">
                                        {{- 'video.toggler_label' | t: caption: product.title -}}
                                      </span>
                                    </button>
                                    <template>
                                      {%- case media.media_type -%}
                                        {%- when 'external_video' -%}
                                          {%- assign video_class = 'js-' | append: media.host -%}
                                          {%- if media.host == 'youtube' -%}
                                            {{- media | external_video_url: autoplay: false, loop: false, playlist: media.external_id | external_video_tag: class: video_class, loading: "lazy" -}}
                                          {%- else -%}
                                            {{- media | external_video_url: autoplay: false, loop: false | external_video_tag: class: video_class, loading: "lazy" -}}
                                          {%- endif -%}
                                        {%- when 'video' -%}
                                          {{- media | media_tag: image_size: "2048x", autoplay: true, loop: false, controls: true, preload: "none" -}}
                                      {%- endcase -%}
                                    </template>
                                  </deferred-media>
                                </div>
                              </div>
                            {%- else -%}
                              {%- if media.id != product.selected_or_first_available_variant.featured_media.id -%}
                                <div class="splide__slide" data-media-id="{{ media.id }}">
                                  <a
                                    href="{{ product_clean_url }}"
                                    class="product-common_image --media-size-{{ section.settings.product_media_size }}"
                                    style="--media-ratio: {{ gallery_media_ratio }};"
                                  >
                                    {%- render 'product-media-image', product: product, media: media, loading: 'eager' -%}
                                  </a>
                                </div>
                              {%- endif -%}
                          {%- endif -%}
                        {%- endfor -%}
                      </div>
                    </div>
                    {%- if section.settings.show_pagination -%}
                      <div class="splide-controls --justify-center {% unless product.media.size > 1 %}visually-hidden{% endunless %}">
                        <ul class="splide__pagination" role="tablist" aria-label="{{- 'accessibility.slider.pagination_label' | t -}}"></ul>
                      </div>
                    {%- endif -%}
                  </div>
                </splide-slider>
              </div>
            </div>
          </div>
        {%- endif -%}
        {%- else -%}
          <div class="{{ section_prefix_class }}_media-area">
            <div class="{{ section_prefix_class }}_sticky-wrap">
              <div class="{{ section_prefix_class }}_media-wrap">
                <splide-slider
                  data-drag='false'
                  data-autoplay='{{- section.settings.auto_play -}}'
                  data-rewind="true"
                  data-gap='0'
                  data-per-move="1"
                  data-arrows='false'
                  data-pagination='{{ section.settings.show_pagination }}'
                  data-per-page='1'
                  data-interval="{{- section.settings.change_slides_every | times: 1000 -}}"
                  data-type="slide"
                >
                  <div class="splide product-common_slider">
                    <div class="splide__track">
                      <div class="splide__list">
                        {%- for placeholder in (1..3) -%}
                          {%- liquid
                            capture placeholder_image
                              if forloop.index > 3
                                echo 'product-apparel-1'
                                else
                                  echo 'product-apparel-' | append: forloop.index
                              endif
                            endcapture
                          -%}
                          <div class="splide__slide">
                            <div
                              class="product-common_image --media-size-{{ section.settings.product_media_size }}"
                              style="--media-ratio: 1;"
                            >
                              {{- placeholder_image | placeholder_svg_tag: 'object-fit object-fit--absolute' -}}
                            </div>
                          </div>
                        {%- endfor -%}
                      </div>
                    </div>
                    {%- if section.settings.show_pagination -%}
                      <div class="splide-controls --justify-center">
                        <ul class="splide__pagination" role="tablist" aria-label="{{- 'accessibility.slider.pagination_label' | t -}}"></ul>
                      </div>
                    {%- endif -%}
                  </div>
                </splide-slider>
              </div>
            </div>
          </div>
      {%- endif -%}
      <div class="{{ section_prefix_class }}_description-area">
        <div class="{{ section_prefix_class }}_sticky-wrap">
          {%- for block in section.blocks -%}
            {%- case block.type -%}
              {%- when 'vendor' -%}
                {%- liquid
                  capture heading_size
                    case block.settings.heading_size
                      when 'heading_small'
                        echo 'h5'
                      when 'heading_x_small'
                        echo 'h6'
                      else
                        echo 'h'
                    endcase
                  endcapture
  
                  capture heading_weight
                    case block.settings.heading_weight
                      when 'medium'
                        echo '--fw-medium'
                      when 'normal'
                        echo '--fw-normal'
                    endcase
                  endcapture
                -%}
                <div
                  class="product-common_row product-common_row--{{ block.type }}"
                  style="--block-spacing: {{ block.settings.block_spacing }}px"
                  {{ block.shopify_attributes }}
                >
                  <strong class="product-common_vendor mty --word-break {{ heading_size }} {{ heading_weight }}">
                    {{- product_vendor -}}
                  </strong>
                </div>
              {%- when 'title' -%}
                {%- liquid
                  capture heading_size
                    case block.settings.heading_size
                      when 'heading_xx_large'
                        echo 'h1'
                      when 'heading_x_large'
                        echo 'h2'
                      when 'heading_large'
                        echo 'h3'
                      when 'heading_medium'
                        echo 'h4'
                      else
                        echo 'h'
                    endcase
                  endcapture
  
                  capture heading_weight
                    case block.settings.heading_weight
                      when 'semi_bold'
                        echo '--fw-semi-bold'
                      when 'bold'
                        echo '--fw-bold'
                      when 'medium'
                        echo '--fw-medium'
                      when 'normal'
                        echo '--fw-normal'
                    endcase
                  endcapture
                -%}
                <div
                  class="product-common_row product-common_row--{{ block.type }}"
                  style="--block-spacing: {{ block.settings.block_spacing }}px"
                  {{ block.shopify_attributes }}
                >
                  <h2 class="mty product-common_title {{ heading_size }} {{ heading_weight }}">
                    <a href="{{- product_clean_url -}}" class="--hover-underline">
                      {{- product_title -}}
                    </a>
                  </h2>
                </div>
              {%- when 'content' -%}
                {%- if product.description != blank -%}
                  <div
                    class="product-common_row product-common_row--{{ block.type }} text-size--{{ block.settings.text_size }}"
                    style="--block-spacing: {{ block.settings.block_spacing }}px"
                    {{ block.shopify_attributes }}
                  >
                    {{- product.description -}}
                  </div>
                {%- endif -%}
              {%- when 'features_table' -%}
                {{- 'component-specs-table.css' | asset_url | stylesheet_tag -}}
                <div
                  class="product-common_row product-common_row--{{ block.type }}"
                  style="--block-spacing: {{ block.settings.block_spacing }}px"
                  {{ block.shopify_attributes }}
                >
                  <div class="specs-wrap">
                    <table class="specs-table">
                      {%- if block.settings.feature_heading != blank or block.settings.feature_subheading != blank -%}
                        {%- liquid
                          capture feature_heading_weight
                            case block.settings.feature_heading_weight
                              when 'semi_bold'
                                echo '--fw-semi-bold'
                              when 'bold'
                                echo '--fw-bold'
                              when 'medium'
                                echo '--fw-medium'
                              when 'normal'
                                echo '--fw-normal'
                            endcase
                          endcapture
                          
                          capture feature_subheading_weight
                            case block.settings.feature_subheading_weight
                              when 'semi_bold'
                                echo '--fw-semi-bold'
                              when 'bold'
                                echo '--fw-bold'
                              when 'medium'
                                echo '--fw-medium'
                              when 'normal'
                                echo '--fw-normal'
                            endcase
                          endcapture
                        -%}
                        <thead>
                          <tr>
                            <th class="h5 --align-left {{ feature_heading_weight }}">
                              {%- liquid
                                if block.settings.feature_heading != blank
                                  echo block.settings.feature_heading
                                  else
                                    echo '&nbsp;'
                                endif
                              -%}
                            </th>
                            <th class="h5 --align-right {{ feature_subheading_weight }}">
                              {%- liquid
                                if block.settings.feature_subheading != blank
                                  echo block.settings.feature_subheading
                                  else
                                    echo '&nbsp;'
                                endif
                              -%}
                            </th>
                          </tr>
                        </thead>
                      {%- endif -%}
                      <tbody>
                        {%- if block.settings.column_1_text_1 != blank or block.settings.column_2_text_1 != blank -%}
                          <tr>
                            <td class="h6 mty --fw-medium">
                              {%- liquid
                                if block.settings.column_1_text_1 != blank
                                  echo block.settings.column_1_text_1
                                  else
                                    echo '&nbsp;'
                                endif
                              -%}
                            </td>
                            <td class="h6 mty --fw-medium --align-right">
                              {%- liquid
                                if block.settings.column_2_text_1 != blank
                                  echo block.settings.column_2_text_1
                                  else
                                    echo '&nbsp;'
                                endif
                              -%}
                            </td>
                          </tr>
                        {%- endif -%}
                        {%- if block.settings.column_1_text_2 != blank or block.settings.column_2_text_2 != blank -%}
                          <tr>
                            <td class="h6 mty --fw-medium">
                              {%- liquid
                                if block.settings.column_1_text_2 != blank
                                  echo block.settings.column_1_text_2
                                  else
                                    echo '&nbsp;'
                                endif
                              -%}
                            </td>
                            <td class="h6 mty --fw-medium --align-right">
                              {%- liquid
                                if block.settings.column_2_text_2 != blank
                                  echo block.settings.column_2_text_2
                                  else
                                    echo '&nbsp;'
                                endif
                              -%}
                            </td>
                          </tr>
                        {%- endif -%}
                        {%- if block.settings.column_1_text_3 != blank or block.settings.column_2_text_3 != blank -%}
                          <tr>
                            <td class="h6 mty --fw-medium">
                              {%- liquid
                                if block.settings.column_1_text_3 != blank
                                  echo block.settings.column_1_text_3
                                  else
                                    echo '&nbsp;'
                                endif
                              -%}
                            </td>
                            <td class="h6 mty --fw-medium --align-right">
                              {%- liquid
                                if block.settings.column_2_text_3 != blank
                                  echo block.settings.column_2_text_3
                                  else
                                    echo '&nbsp;'
                                endif
                              -%}
                            </td>
                          </tr>
                        {%- endif -%}
                        {%- if block.settings.column_1_text_4 != blank or block.settings.column_2_text_4 != blank -%}
                          <tr>
                            <td class="h6 mty --fw-medium">
                              {%- liquid
                                if block.settings.column_1_text_4 != blank
