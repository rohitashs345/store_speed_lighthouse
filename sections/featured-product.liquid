                        {%- endif -%}
                        {%- if block.settings.column_1_text_9 != blank or block.settings.column_2_text_9 != blank -%}
                          <tr>
                            <td class="h6 mty --fw-medium">
                              {%- liquid
                                if block.settings.column_1_text_9 != blank
                                  echo block.settings.column_1_text_9
                                  else
                                    echo '&nbsp;'
                                endif
                              -%}
                            </td>
                            <td class="h6 mty --fw-medium --align-right">
                              {%- liquid
                                if block.settings.column_2_text_9 != blank
                                  echo block.settings.column_2_text_9
                                  else
                                    echo '&nbsp;'
                                endif
                              -%}
                            </td>
                          </tr>
                        {%- endif -%}
                        {%- if block.settings.column_1_text_10 != blank or block.settings.column_2_text_10 != blank -%}
                          <tr>
                            <td class="h6 mty --fw-medium">
                              {%- liquid
                                if block.settings.column_1_text_10 != blank
                                  echo block.settings.column_1_text_10
                                  else
                                    echo '&nbsp;'
                                endif
                              -%}
                            </td>
                            <td class="h6 mty --fw-medium --align-right">
                              {%- liquid
                                if block.settings.column_2_text_10 != blank
                                  echo block.settings.column_2_text_10
                                  else
                                    echo '&nbsp;'
                                endif
                              -%}
                            </td>
                          </tr>
                        {%- endif -%}
                      </tbody>
                    </table>
                  </div>
                </div>
              {%- when 'stock' -%}
                {%- liquid
                  capture font_weight
                    case block.settings.font_weight
                      when 'bold'
                        echo '700'
                      when 'semi_bold'
                        echo '600'
                      when 'medium'
                        echo '500'
                      when 'normal'
                        echo '400'
                    endcase
                  endcapture
                -%}
                <div
                  class="product-common_row product-common_row--{{ block.type }} parent-node"
                  style="--block-spacing: {{ block.settings.block_spacing }}px; --fw-custom: {{ font_weight }};"
                  {{ block.shopify_attributes }}
                  {{ stock_render_attr }}
                >
                  {%- render 'product-stock', product: product -%}
                </div>
              {%- when 'price' -%}
                {%- liquid
                  capture font_weight
                    case block.settings.font_weight
                      when 'bold'
                        echo '700'
                      when 'semi_bold'
                        echo '600'
                      when 'medium'
                        echo '500'
                      when 'normal'
                        echo '400'
                    endcase
                  endcapture

                  capture enable_second_col
                    if cart.taxes_included or shop.shipping_policy.body != blank or block.settings.enable_share
                      echo 'true'
                    endif
                  endcapture
                -%}
                <div
                  class="product-common_row product-common_row--{{ block.type }}"
                  style="--block-spacing: {{ block.settings.block_spacing }}px; --fw-custom: {{ font_weight }};"
                  {{ block.shopify_attributes }}
                >
                  <div class="product-common_price-wrap">
                    <div class="product-common_price-col" {{ price_render_attr }}>
                      {%- render 'product-price', product: product, use_variant: true, show_unit_price: true -%}
                    </div>
                    {%- if enable_second_col == 'true' -%}
                      <div class="product-common_price-col product-common_taxes">
                        <div class="stats-wrap_col stats-wrap_col--actions">
                          {%- if block.settings.enable_share -%}
                            <ul class="list-unstyled pact-list">
                              <li class="pact-list_item">
                                {{- 'component-share-button.css' | asset_url | stylesheet_tag -}}
                                <div class="share-button-wrap {{ section_prefix_class }}_share-button-wrap" {{ share_render_attr }}>
                                  {%- liquid
                                    assign share_url = request.origin | append: product.url | append: '?variant=' | append: product.selected_or_first_available_variant.id
                                    render 'share-button', share_link: share_url, share_title: product.title, btn_ixi: true
                                  -%}
                                </div>
                              </li>
                            </ul>
                          {%- endif -%}
                        </div>
                      </div>
                    {%- endif -%}
                  </div>
                  {%- if cart.taxes_included or shop.shipping_policy.body != blank -%}
                    <strong class="product-common_taxes-text --align-right --fw-normal">
                      {%- liquid
                        if cart.taxes_included
                          echo 'product.include_taxes' | t
                        endif
                        if shop.shipping_policy.body != blank
                          echo 'product.shipping_policy_html' | t: link: shop.shipping_policy.url
                        endif
                      -%}
                    </strong>
                  {%- endif -%}
                </div>
              {%- when 'sku' -%}
                {%- liquid
                  capture font_weight
                    case block.settings.font_weight
                      when 'bold'
                        echo '--fw-bold'
                      when 'medium'
                        echo '--fw-medium'
                      when 'normal'
                        echo '--fw-normal'
                    endcase
                  endcapture
                -%}
                <div
                  class="product-common_row product-common_row--{{ block.type }} {{ font_weight }} parent-node"
                  style="--block-spacing: {{ block.settings.block_spacing }}px"
                  {{ block.shopify_attributes }}
                  {{ sku_render_attr }}
                >
                  {%- render 'product-sku', product: product, show_label: true -%}
                </div>
              {%- when 'variants_chart' -%}
                <div
                  class="product-common_row product-common_row--{{ block.type }} {{ font_weight }}"
                  style="--block-spacing: {{ block.settings.block_spacing }}px"
                  {{ block.shopify_attributes }}
                >
                  {%- unless product.has_only_default_variant -%}
                    <product-variants
                      data-json-selector="#{{- product_json_id -}}"
                      data-forms='["#{{ product_form_installment_id }}", "#{{ form_id }}"]'
                      data-renders='["[{{ stock_render_attr }}]", "[{{ price_render_attr }}]", "[{{ sku_render_attr }}]", "[{{ share_render_attr }}]", "[{{ qty_render_attr }}]", "[{{ pickup_render_attr }}]"]'
                      data-section-id="{{- section.id -}}"
                      data-product-url="{{- product.url -}}"
                      data-update-url="false"
                      data-gallery="[{{- variant_media_attr -}}]"
                      data-slider="true"
                      data-parent='true'
                      data-parent-selector="[data-parent='{{- parent_selector -}}']"
                      {% if block.settings.show_swatches == 'images' %}data-swatch="image"{% endif %}
                    >
                      {%- for option in product.options_with_values -%}
                        {%- liquid
                          unless block.settings.show_swatches == 'none'
                            capture has_color_variant
                              for value in option.values
                                if block.settings.show_swatches == 'swatches'
                                  if value.swatch.image
                                    echo 'true'
                                    break
                                    elsif value.swatch.color
                                      echo 'true'
                                      break
                                  endif
                                  else
                                    if option.name == 'color' or option.name == 'Color' or option.name == 'colour' or option.name == 'Colour'
                                      echo 'true'
                                      break
                                    endif
                                endif
                              endfor
                            endcapture
                          endunless

                          capture is_size_option
                            if option.name == 'Size' or option.name == 'size'
                              echo 'true'
                              else
                                echo 'false'
                            endif
                          endcapture
                        -%}
                        <fieldset class="{% if has_color_variant == 'true' %}product-variant_fieldset{% endif %}">
                          <div class="product-variant_title-wrap">
                            <strong class="product-variant_title h6 mty --word-break">
                              {{- option.name -}}:
                            </strong>
                            {%- if is_size_option == 'true' and block.settings.show_size_chart -%}
                              <modal-component-toggler>
                                <button
                                  type="button"
                                  data-expanded="false"
                                  data-modal-ref="modal-size-chart-{{ section.id }}"
                                  aria-haspopup="dialog"
                                  aria-controls="modal-size-chart-{{ section.id }}"
                                  class="button button--link product-common_chart-link"
                                >
                                  {{- 'product.size_chart.toggler_label' | t -}}
                                </button>
                              </modal-component-toggler>
                              <modal-component
                                data-modal="modal-size-chart-{{ section.id }}"
                                data-container="body"
                              >
                                <div
                                  class="modal modal-component modal-component--size-chart modal-component--centered scheme--{{ section.settings.section_color_scheme }}"
                                  role="dialog"
                                  aria-modal="true"
                                  aria-labelledby="modal-size-chart-{{ section.id }}-heading"
                                  aria-describedby="modal-size-chart-{{ section.id }}"
                                  tabindex="-1"
                                >
                                  <div class="modal-component_spacer">
                                    <div class="modal-component_wrapper" id="modal-size-chart-{{ section.id }}">
                                      <div class="modal-component_body">
                                        <div class="modal-component_head --align-left product-common_size-heading">
                                          <modal-component-toggler>
                                            <button
                                              type="button"
                                              data-expanded="true"
                                              data-toggle-attribute="false"
                                              data-modal-ref="modal-size-chart-{{ section.id }}"
                                              class="modal-component_btn-close btn-icn-ixi">
                                              <span class="btn-icn-ixi_wrapper">
                                                {%- render 'icons-data', width: 14, height: 14, use_icon: true, icon_reference: 'cross' -%}
                                                <span class="visually-hidden">{{- 'accessibility.close' | t -}}</span>
                                              </span>
                                            </button>
                                          </modal-component-toggler>
                                          <strong id="modal-size-chart-{{ section.id }}-heading" class="modal-component_heading h4">
                                            {{- 'product.size_chart.heading' | t -}}
                                          </strong>
                                        </div>
                                        <div class="modal-component_content">
                                          <div class="main-product_chart-wrap --media-size-adapt" style="--media-ratio: {{ block.settings.size_chart_image.aspect_ratio | default: '1' }};">
                                            {%- if block.settings.size_chart_image != blank -%}
                                              {%- liquid
                                                capture image_alt  
                                                  echo 'product.size_chart.alt_label' | t: product_title: product.title
                                                endcapture
                                              -%}
                                              {{- block.settings.size_chart_image | image_url: width: block.settings.size_chart_image.width | image_tag: class: 'object-fit object-fit--absolute', loading: loading_attr, alt: image_alt, widths: '972, 1944', sizes: '(max-width: 767px) 972vw, 1944vw' -}}
                                              {%- else -%}
                                                {{- 'hero-apparel-1' | placeholder_svg_tag: 'object-fit object-fit--absolute' -}}
                                            {%- endif -%}
                                          </div>
                                        </div>
                                      </div>
                                    </div>
                                  </div>
                                </div>
                              </modal-component>
                            {%- endif -%}
                          </div>
                          {% if has_color_variant == 'true' %}
                            <div class="product-variant_options-wrap --v-align-middle product-variant_options-wrap--colors">
                              {%- render 'product-variant-swatches', product: product, option: option, product_form_id: form_id, show_label: true, show_swatches: block.settings.show_swatches -%}
                            </div>
                            {%- else -%}
                              <div class="product-variant_options-wrap product-common_product-variant_options-wrap --v-align-middle">
                                {%- render 'product-variant-options', product: product, option: option, product_form_id: form_id, swatches: block.settings.show_swatches -%}
                              </div>
                          {%- endif -%}
                        </fieldset>
                      {%- endfor -%}
                    </product-variants>
                  {%- endunless -%}
                </div>
              {%- when 'quantity_input' -%}
                <div
                  class="product-common_row product-common_row--{{ block.type }}"
                  style="--block-spacing: {{ block.settings.block_spacing }}px"
                  {{ block.shopify_attributes }}
                >
                  <div class="product-common_qty-wrap" {{ qty_render_attr }}>
                    <strong class="{{ section_prefix_class }}_product-label h6 --word-break">
                      {{- 'product.qty_label' | t -}}.
                    </strong>
                    {%- liquid
                      assign currencies_using_comma_decimals = 'ANG,ARS,BRL,BYN,BYR,CLF,CLP,COP,CRC,CZK,DKK,EUR,HRK,HUF,IDR,ISK,MZN,NOK,PLN,RON,RUB,SEK,TRY,UYU,VES,VND' | split: ','
                      assign uses_comma_decimals = false
                      if currencies_using_comma_decimals contains cart.currency.iso_code
                        assign uses_comma_decimals = true
                      endif
                    -%}
                    <quantity-input
                      class="quantity-input product-common_quantity-input --v-align-middle"
                      data-init-value="{{- product.selected_or_first_available_variant.quantity_rule.min -}}"
                      {% unless uses_comma_decimals %}
                        data-variant-price="{{- product.selected_or_first_available_variant.price | money_without_currency | replace: ',', '' | times: 100 -}}"
                        {% else %}
                          data-variant-price="{{- product.selected_or_first_available_variant.price | money_without_currency | replace: '.', '' | replace: ',', '.' | times: 100 -}}"
                      {% endunless %}
                    >
                      <div class="quantity-input_fielder-wrap">
                        <button class="quantity-input_button btn-icn-ixi quantity-input_button-minus disabled" disabled name="minus" type="button">
                          <span class="btn-icn-ixi_wrapper">
                            {%- render 'icons-data', width: 8, height: 8, use_icon: true, icon_reference: 'minus' -%}
                            <span class="visually-hidden">
                              {{- 'quantity.decrease' | t: product: product.title -}}
                            </span>
                          </span>
                        </button>
                        <input
                          type="number"
                          name="quantity"
                          data-min="{{ product.selected_or_first_available_variant.quantity_rule.min | default: 1 }}"
                          min="{{- product.selected_or_first_available_variant.quantity_rule.min | default: 1 -}}"
                          {% if product.selected_or_first_available_variant.quantity_rule.max != null %}
                            data-max="{{- product.selected_or_first_available_variant.quantity_rule.max -}}"
                            max="{{- product.selected_or_first_available_variant.quantity_rule.max -}}"
                          {% endif %}
                          step="{{- product.selected_or_first_available_variant.quantity_rule.increment | default: 1 -}}"
                          value="{{- product.selected_or_first_available_variant.quantity_rule.min | default: 1 -}}"
                          aria-label="{{- 'quantity.input_label' | t: product: product.title -}}"
                          {% if product.title != blank %}
                            form="{{- form_id -}}"
                          {% endif %}
                          title="{{- 'quantity.input_label' | t: product: product.title -}}"
                        >
                        <button class="quantity-input_button btn-icn-ixi quantity-input_button-plus" name="plus" type="button">
                          <span class="btn-icn-ixi_wrapper">
                            {%- render 'icons-data', width: 8, height: 8, use_icon: true, icon_reference: 'plus' -%}
                            <span class="visually-hidden" style="background-color: white; color: black;">
                              {{- 'quantity.increase' | t: product: product.title -}}
                            </span>
                          </span>
                        </button>
                      </div>
                      <strong class="quantity-input_subtotal-wrap --word-break --fw-normal {% unless block.settings.show_subtotal %}hidden{% endunless %}">
                        <span class="quantit-input_subtotal-title">
                          {{- 'quantity.subtotal' | t -}}:
                        </span>
                        <span class="quantity-input_subtotal-price" data-qty-subtotal="">
                          {%- assign subtotal_price = product.selected_or_first_available_variant.price | default: 1999 -%}
                          {{- subtotal_price | money -}}
                        </span>
                      </strong>
                    </quantity-input>
                  </div>
                  <div class="product-common_error --fw-normal hidden" {{ error_render_attr }}>
                    <span data-error=""></span>
                  </div>
                </div>
              {%- when 'buttons' -%}
                <div
                  class="product-common_row product-common_row--{{ block.type }}"
                  style="--block-spacing: {{ block.settings.block_spacing }}px"
                  {{ block.shopify_attributes }}
                >
                  {%- if product.title != blank -%}
                    {%- form 'product',
                      product,
                      data-productid: product.id,
                      id: product_form_installment_id,
                      class: 'product-atc-installment-form'
                    -%}
                      <input
                        type="hidden"
                        name="id"
                        data-productid="{{- product.id -}}"
                        value="{{- product.selected_or_first_available_variant.id -}}"
                      >
                      {{- form | payment_terms -}}
                    {%- endform -%}
                    {%- form 'product',
                      product,
                      id: form_id,
                      class: 'main-product_submit-from',
                      novalidate: 'novalidate',
                      data-type: 'add-to-cart-form'
                    -%}
                      {%- liquid
                        assign gift_card_recipient_feature_active = false
                        if block.settings.show_gift_card_recipient and product.gift_card?
                          assign gift_card_recipient_feature_active = true
                        endif

                        assign show_dynamic_checkout = false
                        if block.settings.show_dynamic_checkouts and gift_card_recipient_feature_active == false
                          assign show_dynamic_checkout = true
                        endif

                        if gift_card_recipient_feature_active
                          render 'gift-card-recipient-form', product: product, form: form, section: section
                        endif

                        assign check_against_inventory = true
                        if product.selected_or_first_available_variant.inventory_management != 'shopify' or product.selected_or_first_available_variant.inventory_policy == 'continue'
                          assign check_against_inventory = false
                        endif
                        if product.selected_or_first_available_variant.quantity_rule.min > product.selected_or_first_available_variant.inventory_quantity and check_against_inventory
                          assign quantity_rule_soldout = true
                        endif

                        capture atc_button_label
                          if product.selected_or_first_available_variant.available == false or quantity_rule_soldout
                            echo 'product.atc_buttons.soldout' | t
                            else
                              echo 'product.atc_buttons.add_to_cart' | t
                          endif
                        endcapture
                      -%}
                      <input
                        type="hidden"
                        name="id"
                        value="{{- product.selected_or_first_available_variant.id -}}"
                      >
                        <div class="product-common_btns-wrap">
                          <div class="product-common_form-btns --v-align-start">
                            <atc-submit-form
                              class="product-common_atc-form"
                              data-error-selector="[{{ error_render_attr }}]"
                              data-form="#{{ form_id }}"
                              data-parent='true'
                              data-parent-selector="[data-parent='{{- parent_selector -}}']"
                              {% if settings.cart_view == 'drawer' %}
                                {% unless template == 'cart' %}
                                  data-modal="true"
                                  data-modal-ref='[data-modal-ref="modal-cart-drawer"][data-expanded="false"]'
                                {% endunless %}
                                {% else %}
                                  {% unless template == 'cart' %}
                                    data-redirect-to="{{- routes.cart_url -}}"
                                  {% endunless %}
                              {% endif %}
                              data-sections='[
                                {
                                  "id": "cart-head",
                                  "selectors": ["[data-render-cart-bubble]", "[data-render-cart-text]"]
                                },
                                {
                                  "id": "cart-showcase",
                                  "selectors": ["[data-line-items-drawer-container]"]
                                }
                              ]'
                            >
                              <button
                                type="submit"
                                name="add"
                                class="button button--primary {{ section_prefix_class }}_atc-btn product-common_atc-btn --v-align-middle --justify-center"
                                {% if product.selected_or_first_available_variant.available == false or quantity_rule_soldout %}
                                  disabled
                                {% endif %}
                              >
                                <span data-atc-text="" class="{{ section_prefix_class }}_add-cart-btn text-size--small">
                                  {{- atc_button_label -}}
                                </span>
                                <span class="loader {{ section_prefix_class }}_loader hidden --v-align-middle --justify-center" data-loader="">
                                  {%- render 'icons-data', width: 20, height: 20, use_icon: true, icon_reference: 'loader' -%}
                                  <span class="visually-hidden">
                                    {{- 'accessibility.loader' | t -}}
                                  </span>
                                </span>
                              </button>
                            </atc-submit-form>
                            {%- if block.settings.show_whatsapp and block.settings.whatsapp_number != blank -%}
                              {% liquid
                                capture wasapp_message
                                  assign url_origin = product.selected_or_first_available_variant.url | prepend: request.origin
                                  if block.settings.custom_message != blank
                                    assign remove_spaces = block.settings.custom_message | replace: ' ', '&nbsp;'
                                    echo remove_spaces | replace: '||product_url||', url_origin
                                    else
                                      echo product.selected_or_first_available_variant.url
                                  endif
                                endcapture
                              %}
                              <a
                                href="https://wa.me/{{ block.settings.whatsapp_number }}?text={{ wasapp_message }}"
                                target="_blank"
                                class="btn-icn-ixi product-common_btn-whatsapp"
                                data-tooltip="{{- 'product.whatsapp_label' | t -}}"
                              >
                                <i class="btn-icn-ixi_wrapper">
                                  {%- render 'icons-data', width: 30, height: 30, use_icon: true, icon_reference: 'whatsapp' -%}
                                  <span class="visually-hidden">
                                    {{- 'product.whatsapp_label' | t -}}
                                  </span>
                                </i>
                              </a>
                            {%- endif -%}
                          </div>
                          {%- if show_dynamic_checkout -%}
                            <div class="product-common_dynamic-btns">
                              {{- form | payment_button -}}
                            </div>
                          {%- endif -%}
                        </div>
                    {%- endform -%}
                    {%- else -%}
                        <button
                          type="button"
                          class="button button--primary {{ section_prefix_class }}_atc-btn product-common_atc-btn --v-align-middle --justify-center"
                          disabled
                        >
                          <span data-atc-text="">
                            {{- 'product.atc_buttons.soldout' | t -}}
                          </span>
                        </button>
                    {%- endif -%}
                </div>
              {%- when 'countdown_timer' -%}
                <div
                  class="product-common_row product-common_row--{{ block.type }} parent-node"
                  style="--block-spacing: {{ block.settings.block_spacing }}px"
                  {{ block.shopify_attributes }}
                >
                  <div class="widget--styles product-common_timer-wrap">
                    {%- render 'countdown-timer', end_date: block.settings.end_date, end_type: block.settings.end_type, end_message: block.settings.end_message -%}
                  </div>
                </div>
              {%- when 'collapsible_row' -%}
                <div
                  class="product-common_row collapsible-accordion product-common_row--{{ block.type }}"
                  style="--block-spacing: {{ block.settings.block_spacing }}px"
                  {{ block.shopify_attributes }}
                >
                  <details class="open-close --accordion-view" {% if block.settings.open_by_default %}open{% endif %}>
                    <summary
                      class="open-close_opener mty h6"
                      aria-controls="sect-{{ section.id }}-{{ block.id }}"
                      id="{{ section.id }}-{{ block.id }}-accordion"
                    >
                      {{- block.settings.heading -}}
                      <i class="open-close_opener-icn open-close_opener--icn-open">
                        {%- render 'icons-data', width: 10, height: 10, use_icon: true, icon_reference: 'plus' -%}
                      </i>
                      <i class="open-close_opener-icn open-close_opener--icn-close">
                        {%- render 'icons-data', width: 10, height: 10, use_icon: true, icon_reference: 'minus' -%}
                      </i>
                    </summary>
                    <div
                      role="region"
                      id="sect-{{ section.id }}-{{ block.id }}"
                      class="open-close_slide"
                      aria-labelledby="{{ section.id }}-{{ block.id }}-accordion"
                    >
                      <div class="open-close_slide-wrapper text-size--small --word-break">
                        {{- block.settings.description -}}
                      </div>
                    </div>
                  </details>
                </div>
              {%- when 'pickup' -%}
                <div
                  class="product-common_row product-common_row--{{ block.type }} parent-node"
                  style="--block-spacing: {{ block.settings.block_spacing }}px"
                  {{ block.shopify_attributes }}
                  {{ pickup_render_attr }}
                >
                  {%- render 'product-pickup', product: product, prefix_class: section_prefix_class, scheme: section.settings.section_color_scheme -%}
                </div>
              {%- when 'custom_liquid' -%}
                <div
                  class="product-common_row product-common_row--{{ block.type }}"
                  style="--block-spacing: {{ block.settings.block_spacing }}px"
                  {{ block.shopify_attributes }}
                >
                  {{- block.settings.custom_liquid -}}
                </div>
              {%- when '@app' -%}
                <div
                  class="product-common_row product-common_row--{{ block.type }}"
                  {{ block.shopify_attributes }}
                >
                  {%- render block -%}
                </div>
              {%- endcase -%}
            {%- endfor -%}
        </div>
      </div>
      {%- if product.title != blank -%}
        <script id="{{- product_json_id -}}" type="application/json">
          {{- all_products[product] | json -}}
        </script>
        <script type="application/ld+json">
          {
            "@context": "http://schema.org/",
            "@type": "Product",
            "name": {{ product.title | json }},
            "url": {{ request.origin | append: product.url | json }},
            {% if seo_media -%}
              "image": [
                {{ seo_media | image_url: width: 1920 | prepend: "https:" | json }}
              ],
            {%- endif %}
            "description": {{ product.description | strip_html | json }},
            {% if product.selected_or_first_available_variant.sku != blank -%}
              "sku": {{ product.selected_or_first_available_variant.sku | json }},
            {%- endif %}
            "brand": {
              "@type": "Brand",
              "name": {{ product.vendor | json }}
            },
            "offers": [
              {%- for variant in product.variants -%}
                {
                  "@type" : "Offer",
                  {%- if variant.sku != blank -%}
                    "sku": {{ variant.sku | json }},
                  {%- endif -%}
                  {%- if variant.barcode.size == 12 -%}
                    "gtin12": {{ variant.barcode }},
                  {%- endif -%}
                  {%- if variant.barcode.size == 13 -%}
                    "gtin13": {{ variant.barcode }},
                  {%- endif -%}
                  {%- if variant.barcode.size == 14 -%}
                    "gtin14": {{ variant.barcode }},
                  {%- endif -%}
                  "availability" : "http://schema.org/{% if variant.available %}InStock{% else %}OutOfStock{% endif %}",
                  "price" : {{ variant.price | divided_by: 100.00 | json }},
                  "priceCurrency" : {{ cart.currency.iso_code | json }},
                  "url" : {{ request.origin | append: variant.url | json }}
                }{% unless forloop.last %},{% endunless %}
              {%- endfor -%}
            ]
          }
        </script>
      {%- endif -%}
    </div>
  </div>
</div>
{%- if product.title != blank -%}
  {%- if first_3d_model -%}
    <script type="application/json" id="ProductJSON-{{ product.id }}-{{ section.id }}">
      {{- product.media | where: 'media_type', 'model' | json -}}
    </script>
    <script src="{{- 'product-model.js' | asset_url -}}" defer></script>
  {%- endif -%}
{%- endif -%}
{% schema %}
{
  "name": "Featured product",
  "tag": "section",
  "disabled_on": {
    "groups": [
