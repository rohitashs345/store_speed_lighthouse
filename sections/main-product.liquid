{%- liquid
  assign section_prefix_class = 'main-product'
  assign section_scheme_class = section.settings.section_color_scheme | prepend: 'scheme scheme--'
  assign first_3d_model = product.media | where: 'media_type', 'model' | first
  assign product_json_id = 'ProductCardJson-' | append: product.id | append: '-' | append: section.id
  assign form_id= 'main-product-atc-form' | append: product.id | append: '-' | append: section.id
  assign product_form_installment_id = 'main-form-installment' | append: product.id | append: '-' | append: section.id
  assign stock_render_attr = 'data-render-main-stock'
  assign price_render_attr = 'data-render-main-price'
  assign share_render_attr = 'data-render-main-share'
  assign sku_render_attr = 'data-render-main-sku'
  assign qty_render_attr = 'data-render-main-qty'
  assign error_render_attr = 'data-render-main-error'
  assign pickup_render_attr = 'data-render-main-pickup'
  assign variant_media_attr = 'data-update-media'

  if product.selected_or_first_available_variant.featured_media
    assign seo_media = product.selected_or_first_available_variant.featured_media
    else
      assign seo_media = product.featured_media
  endif

  capture enable_reviews
    for block in section.blocks
      case block.type
        when 'review'
          echo 'true'
          break
      endcase
    endfor
  endcapture
-%}
{%- if first_3d_model -%}
  <link
    id="ModelViewerStyle"
    rel="stylesheet"
    href="https://cdn.shopify.com/shopifycloud/model-viewer-ui/assets/v1.0/model-viewer-ui.css"
    media="print"
    onload="this.media='all'"
  >
{%- endif -%}
{%- style -%}
  .{{ section_prefix_class }}-{{ section.id }}{
    --section-padding-top: {{ section.settings.section_top_padding }}px;
    --section-padding-bottom: {{ section.settings.section_bottom_padding }}px;
  }
{%- endstyle -%}
{%- liquid
  if section.settings.show_breadcrumb
    render 'breadcrumb', border_top: section.settings.show_top_bdr, border_bottom: section.settings.show_bottom_bdr, color_scheme: section.settings.breadcrumb_color_scheme
  endif
-%}
