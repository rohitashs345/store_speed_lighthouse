      </div>
      <div class="{{ section_prefix_class }}_col {{ section_prefix_class }}_col--area">
        {%- if product.media.size > 0 or enable_reviews == 'true' -%}
          <div class="{{ section_prefix_class }}_media-wrap">
            <splide-slider
              data-drag='false'
              data-autoplay='{{- section.settings.auto_play -}}'
              data-rewind="true"
              data-gap='0'
              data-per-move="1"
              data-arrows='false'
              {% if product.media.size > 1 %}
                data-pagination='{{ section.settings.show_pagination }}'
                {% else %}
                  data-pagination='false'
              {% endif %}
              data-per-page='1'
              data-interval="{{- section.settings.change_slides_every | times: 1000 -}}"
              data-type="slide"
            >
              <div class="splide product-common_slider" id="gallery-zoom-in-{{- section.id -}}{{- product.id -}}" {{ variant_media_attr }}>
                <div class="splide__track">
                  <div class="splide__list">
                    {%- if product.selected_or_first_available_variant.featured_media != null -%}
                      {%- liquid
                        assign featured_media = product.selected_or_first_available_variant.featured_media

                        capture gallery_media_ratio
                          if section.settings.product_media_size == 'adapt'
                            echo featured_media.preview_image.aspect_ratio | default: '1'
                            else 
                              echo '1'
                          endif
                        endcapture
                      -%}
                      {%- liquid
                        assign media_largest = featured_media.preview_image | image_url | append: '&' | append: featured_media.preview_image.width | append: 'w'
                        case featured_media.preview_image.width
                          when => 550
                            assign media_largest = featured_media.preview_image | image_url: width: 550 | append: '550w'
                          when => 1100
                            assign media_largest = featured_media.preview_image | image_url: width: 1100 | append: '1100w'
                          when => 1445
                            assign media_largest = featured_media.preview_image | image_url: width: 1445 | append: '1445w'
                          when => 1680
                            assign media_largest = featured_media.preview_image | image_url: width: 1680 | append: '1680w'
                          when => 2048
                            assign media_largest = featured_media.preview_image | image_url: width: 2048 | append: '2048w'
                          when => 2200
                            assign media_largest = featured_media.preview_image | image_url: width: 2200 | append: '2200w'
                          when => 2890
                            assign media_largest = featured_media.preview_image | image_url: width: 2890 | append: '2890w'
                          when => 4096
                            assign media_largest = featured_media.preview_image | image_url: width: 4096 | append: '4096w'
                        endcase 
                      -%}
                      <div class="splide__slide" data-media-id="{{ featured_media.id }}">
                        <a
                          href="{{ media_largest }}"
                          class="product-common_image --media-zoom-in --media-size-{{ section.settings.product_media_size }}"
                          style="--media-ratio: {{ gallery_media_ratio }};"
                          data-pswp-width="{{ featured_media.preview_image.width }}"
                          data-pswp-height="{{ featured_media.preview_image.height }}"
                          data-pswp-srcset="
                                            {%- if featured_media.preview_image.width >= 550 -%}{{ featured_media.preview_image | image_url: width: 550 }} 550w,{%- endif -%}
                                            {%- if featured_media.preview_image.width >= 1100 -%}{{ featured_media.preview_image | image_url: width: 1100 }} 1100w,{%- endif -%}
                                            {%- if featured_media.preview_image.width >= 1445 -%}{{ featured_media.preview_image | image_url: width: 1445 }} 1445w,{%- endif -%}
                                            {%- if featured_media.preview_image.width >= 1680 -%}{{ featured_media.preview_image | image_url: width: 1680 }} 1680w,{%- endif -%}
                                            {%- if featured_media.preview_image.width >= 2048 -%}{{ featured_media.preview_image | image_url: width: 2048 }} 2048w,{%- endif -%}
                                            {%- if featured_media.preview_image.width >= 2200 -%}{{ featured_media.preview_image | image_url: width: 2200 }} 2200w,{%- endif -%}
                                            {%- if featured_media.preview_image.width >= 2890 -%}{{ featured_media.preview_image | image_url: width: 2890 }} 2890w,{%- endif -%}
                                            {%- if featured_media.preview_image.width >= 4096 -%}{{ featured_media.preview_image | image_url: width: 4096 }} 4096w,{%- endif -%}
                                            {{ featured_media.preview_image | image_url }} {{ featured_media.preview_image.width }}w
                                          "
                        >
                          {%- render 'product-featured-image', product: product, loading: 'eager', size: 'full' -%}
                        </a>
                      </div>
                    {%- endif -%}
                    {%- for media in product.media -%}
                      {%- liquid
                        capture gallery_media_ratio
                          if section.settings.product_media_size == 'adapt'
                            echo media.preview_image.aspect_ratio | default: '1'
                            else 
                              echo '1'
                          endif
                        endcapture
                      -%}
                      {%- if media.media_type == 'model' -%}
                        <div class="splide__slide">
                          <div
                            class="product-common_image --media-size-{{ section.settings.product_media_size }}"
                            style="--media-ratio: {{ gallery_media_ratio }};"
                          >
                            <product-model class="deferred-media" data-media-id="{{ media.id }}">
                              <button data-id="Deferred-Poster-Modal-{{ media.id }}-{{ section.id }}" class="deferred-media__poster" type="button">
                                {%- render 'product-media-image', product: product, media: media, loading: 'eager' -%}
                                <span class="deferred-media__poster-icn --v-align-middle --justify-center">
                                  {%- render 'icons-data', width: 20, height: 20, use_icon: true, icon_reference: '3d' -%}
                                </span>
                                <span class="visually-hidden">
                                  {{- 'product.model.toggler_label' | t: product: product.title -}}
                                </span>
                              </button>
                              <template>
                                {{- media | media_tag: image_size: "2048x", toggleable: true -}}
                              </template>
                            </product-model>
                            <button
                              class="button button--primary product__xr-button"
                              type="button"
                              aria-label="{{- 'product.xr_button_label' | t -}}"
                              data-shopify-xr
                              data-shopify-model3d-id="{{- media.id -}}"
                              data-shopify-title="{{- product.title | escape -}}"
                              data-shopify-xr-hidden
                            >
                              {%- liquid
                                render 'icons-data', width: 16, height: 16, use_icon: true, icon_reference: '3d'
                                echo 'product.xr_button' | t
                              -%}
                            </button>
                          </div>
                        </div>
                        {%- elsif media.media_type == 'external_video' or media.media_type == 'video' -%}
                          <div class="splide__slide">
                            <div
                              class="product-common_image --media-size-{{ section.settings.product_media_size }}"
                              style="--media-ratio: {{ gallery_media_ratio }};"
                            >
                              <deferred-media class="deferred-media">
                                <button data-id="Deferred-Poster-Modal-{{ media.id }}-{{ section.id }}" class="deferred-media__poster" type="button">
                                  {%- render 'product-media-image', product: product, media: media, loading: 'eager' -%}
                                  <span class="deferred-media__poster-icn --v-align-middle --justify-center">
                                    {%- render 'icons-data', width: 24, height: 24, use_icon: true, icon_reference: 'play' -%}
                                  </span>
                                  <span class="visually-hidden">
                                    {{- 'video.toggler_label' | t: caption: product.title -}}
                                  </span>
                                </button>
                                <template>
                                  {%- case media.media_type -%}
                                    {%- when 'external_video' -%}
                                      {%- assign video_class = 'js-' | append: media.host -%}
                                      {%- if media.host == 'youtube' -%}
                                        {{- media | external_video_url: autoplay: false, loop: false, playlist: media.external_id | external_video_tag: class: video_class, loading: "lazy" -}}
                                      {%- else -%}
                                        {{- media | external_video_url: autoplay: false, loop: false | external_video_tag: class: video_class, loading: "lazy" -}}
                                      {%- endif -%}
                                    {%- when 'video' -%}
                                      {{- media | media_tag: image_size: "2048x", autoplay: true, loop: false, controls: true, preload: "none" -}}
                                  {%- endcase -%}
                                </template>
                              </deferred-media>
                            </div>
                          </div>
                        {%- else -%}
                          {%- if media.id != product.selected_or_first_available_variant.featured_media.id -%}
                            {%- liquid
                              assign media_largest = media.preview_image | image_url | append: '&' | append: media.preview_image.width | append: 'w'
                              case media.preview_image.width
                                when => 550
                                  assign media_largest = media.preview_image | image_url: width: 550 | append: '550w'
                                when => 1100
                                  assign media_largest = media.preview_image | image_url: width: 1100 | append: '1100w'
                                when => 1445
                                  assign media_largest = media.preview_image | image_url: width: 1445 | append: '1445w'
                                when => 1680
                                  assign media_largest = media.preview_image | image_url: width: 1680 | append: '1680w'
                                when => 2048
                                  assign media_largest = media.preview_image | image_url: width: 2048 | append: '2048w'
                                when => 2200
                                  assign media_largest = media.preview_image | image_url: width: 2200 | append: '2200w'
                                when => 2890
                                  assign media_largest = media.preview_image | image_url: width: 2890 | append: '2890w'
                                when => 4096
                                  assign media_largest = media.preview_image | image_url: width: 4096 | append: '4096w'
