                capture heading_weight
                  case block.settings.heading_weight
                    when 'medium'
                      echo '--fw-medium'
                    when 'normal'
                      echo '--fw-normal'
                  endcase
                endcapture
              -%}
              <div
                class="product-common_row product-common_row--{{ block.type }}"
                style="--block-spacing: {{ block.settings.block_spacing }}px"
                {{ block.shopify_attributes }}
              >
                <strong class="product-common_vendor mty --word-break {{ heading_size }} {{ heading_weight }}">
                  {{- product.vendor -}}
                </strong>
              </div>
            {%- when 'title' -%}
              {%- liquid
                capture heading_size
                  case block.settings.heading_size
                    when 'heading_xx_large'
                      echo 'h1'
                    when 'heading_x_large'
                      echo 'h2'
                    when 'heading_large'
                      echo 'h3'
                    when 'heading_medium'
                      echo 'h4'
                    else
                      echo 'h'
                  endcase
                endcapture

                capture heading_weight
                  case block.settings.heading_weight
                    when 'semi_bold'
                      echo '--fw-semi-bold'
                    when 'bold'
                      echo '--fw-bold'
                    when 'medium'
                      echo '--fw-medium'
                    when 'normal'
                      echo '--fw-normal'
                  endcase
