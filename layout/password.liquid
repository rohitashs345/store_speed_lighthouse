<!doctype html>
<html class="no-js" lang="{{ request.locale.iso_code }}">
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <meta name="theme-color" content="">
  <link rel="canonical" href="{{ canonical_url }}">
  <link rel="preconnect" href="https://cdn.shopify.com" crossorigin>
  {%- if settings.favicon_icon != blank -%}
    <link rel="icon" type="image/png" href="{{ settings.favicon_icon | image_url: width: 32, height: 32 }}">
  {%- endif -%}
  <title>
    {{- shop.name -}}
  </title>
  {% if page_description %}
    <meta name="description" content="{{ page_description | escape }}">
  {% endif %}
  {% render 'meta-tags' %}
  {% render 'theme-variables' %}
  {{ 'splide-core.css' | asset_url | stylesheet_tag }}
  {{ 'base.css' | asset_url | stylesheet_tag }}
  {{ content_for_header }}
  <script>
    document.documentElement.className = document.documentElement.className.replace('no-js', 'js');
  </script>
  <script src="{{ 'splide-init.js' | asset_url }}" defer="defer"></script>
  <script src="{{ 'global.js' | asset_url }}" defer="defer"></script>
  <script src="{{ 'password-component.js' | asset_url }}" defer="defer"></script>
  {%- style -%}
    html{
      background-color: #f8f8f8;
    }
  {%- endstyle -%}
</head>
<body>
  <div id="page-wrapper">
    <a class="skip-to-content-link visually-hidden" href="#MainContent">
      {{- 'accessibility.skip_to_content' | t -}}
    </a>
    {%- render 'icons-data', use_ref: true -%}
    <main id="MainContent" role="main" tabindex="-1">
      {{ content_for_layout }}
    </main>
    {% comment %} {% section 'password-footer' %} {% endcomment %}
  </div>
  {% render 'window-strings-script' %}
</body>
</html>

